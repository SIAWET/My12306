<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/TicketNumber"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text="G128"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:orientation="vertical" >
        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.20"
	        android:orientation="horizontal" >
	        <ImageView 
	            android:layout_width="28dp"
	            android:layout_height="wrap_content"
	            android:src="@drawable/flg_shi"/>
	        <TextView 
	            android:id="@+id/startTime"
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:textSize="16dp"
	            android:text="04:27"
	            />
	        <TextView 
	            android:id="@+id/infomation1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="10dp"
	            android:text="sdfsdfs"
	            />
	    </LinearLayout>
		<LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.20"
	        android:orientation="horizontal" >
	        <ImageView 
	            android:layout_width="30dp"
	            android:layout_height="wrap_content"
	            android:src="@drawable/flg_zhong"/>
	    	<TextView 
	    	    android:id="@+id/endTime"
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:textSize="12dp"
	            android:text="14:27(0æ—¥)"
	            />
	    	<TextView 
	    	    android:id="@+id/infomation2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="10dp"
	            android:text="dfgdfgfdgfd"
	            />
	    </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/atuoLogin"
        android:src="@drawable/forward_25" />

</LinearLayout>